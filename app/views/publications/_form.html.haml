= form_for @publication do |f|
  - if @publication.errors.any?
    #error_explanation
      %h2= "#{pluralize(@publication.errors.count, "error")} prohibited this publication from being saved:"
      %ul
        - @publication.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :type
    = f.text_area :type
  .field
    = f.label :organisation
    = f.text_area :organisation
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :rints
    = f.text_area :rints
  .field
    = f.label :journal
    = f.text_field :journal
  .actions
    = f.submit 'Save'
