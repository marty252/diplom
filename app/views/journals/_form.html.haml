= form_for @journal do |f|
  - if @journal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@journal.errors.count, "error")} prohibited this journal from being saved:"
      %ul
        - @journal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :publishing_house
    = f.text_area :publishing_house
  .field
    = f.label :country
    = f.text_area :country
  .field
    = f.label :science_index
    = f.number_field :science_index
  .actions
    = f.submit 'Save'
